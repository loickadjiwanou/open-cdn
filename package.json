{
  "name": "opencdn",
  "version": "1.0.0",
  "description": "Local CDN with Electron and React",
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently \"npm run react\" \"wait-on http://localhost:3000 && npm run electron\"",
    "react": "react-scripts start",
    "electron": "electron .",
    "build": "react-scripts build && electron-builder",
    "dist": "electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.opencdn.app",
    "productName": "OpenCDN",
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
